#!@BASH@
#
# Executes heursec for all the problem folders under the working directory.
# The arguments given to heursec_all are passed as is to heursec.

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

folder_list=$(ls)

for folder in $folder_list
do
    echo 'Entering into ' $folder  '...'
    cd $folder
    echo 'Executing heursec...'
    time ${bindir}/heursec $@        # &> out.log
    echo 'Exiting ' $folder '...'
    cd ..
done
